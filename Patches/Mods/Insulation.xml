<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- INSULATION -->

	<!-- Buildings (walls & doors) -->

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSWall_Biomass"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>2100</heatCapacity>
				<conductivity>0.5</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSWall_Fibre"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>2400</heatCapacity>
				<conductivity>0.4</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSWall_Polymer"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>2700</heatCapacity>
				<conductivity>0.32</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSWall_Hyper"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>3000</heatCapacity>
				<conductivity>0.26</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSDoorSimple_Biomass"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>1750</heatCapacity>
				<conductivity>0.5</conductivity>
				<airflowWhenOpen>0.5</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSDoorSimple_Fibre"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>2000</heatCapacity>
				<conductivity>0.4</conductivity>
				<airflowWhenOpen>0.5</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSDoorSimple_Polymer"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>2250</heatCapacity>
				<conductivity>0.32</conductivity>
				<airflowWhenOpen>0.5</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSDoorSimple_Hyper"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>2500</heatCapacity>
				<conductivity>0.26</conductivity>
				<airflowWhenOpen>0.5</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<!-- Stuff -->

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSSlab_Biomass"]</xpath>
		<value>
			<li Class="Celsius.StuffThermalProperties">
				<volumetricHeatCapacity>300</volumetricHeatCapacity>
				<conductivity>0.7</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSSlab_Fibre"]</xpath>
		<value>
			<li Class="Celsius.StuffThermalProperties">
				<volumetricHeatCapacity>400</volumetricHeatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSSlab_Polymer"]</xpath>
		<value>
			<li Class="Celsius.StuffThermalProperties">
				<volumetricHeatCapacity>500</volumetricHeatCapacity>
				<conductivity>0.45</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSSlab_Hyper"]</xpath>
		<value>
			<li Class="Celsius.StuffThermalProperties">
				<volumetricHeatCapacity>600</volumetricHeatCapacity>
				<conductivity>0.3</conductivity>
			</li>
		</value>
	</Operation>

	<!-- Ignition data: stuff -->

	<Operation Class="XmlExtensions.PatchOperationSafeAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSSlab_Biomass"]</xpath>
		<value>
			<statBases>
				<IgnitionTemperature>120</IgnitionTemperature>
			</statBases>
			<stuffProps>
				<statOffsets>
					<IgnitionTemperature>120</IgnitionTemperature>
				</statOffsets>
			</stuffProps>
		</value>
	</Operation>

	<Operation Class="XmlExtensions.PatchOperationSafeAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSSlab_Fibre"]</xpath>
		<value>
			<statBases>
				<IgnitionTemperature>200</IgnitionTemperature>
			</statBases>
			<stuffProps>
				<statOffsets>
					<IgnitionTemperature>200</IgnitionTemperature>
				</statOffsets>
			</stuffProps>
		</value>
	</Operation>

	<Operation Class="XmlExtensions.PatchOperationSafeAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSSlab_Polymer"]</xpath>
		<value>
			<statBases>
				<IgnitionTemperature>270</IgnitionTemperature>
			</statBases>
			<stuffProps>
				<statOffsets>
					<IgnitionTemperature>270</IgnitionTemperature>
				</statOffsets>
			</stuffProps>
		</value>
	</Operation>

</Patch>
