<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Vile's Hell Bent for Leather Tanning</li>
	</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
			<!-- Leather -->

			<li Class="XmlExtensions.PatchOperationSafeAdd">
				<xpath>Defs/ThingDef[@Name="VileSK_HidesBase"]</xpath>
				<value>
					<statBases>
						<IgnitionTemperature>180</IgnitionTemperature>
					</statBases>
					<stuffProps>
						<statOffsets>
							<IgnitionTemperature>180</IgnitionTemperature>
						</statOffsets>
					</stuffProps>
				</value>
			</li>

			<li Class="XmlExtensions.PatchOperationSafeAdd">
				<xpath>Defs/ThingDef[defName="Rawhide"]</xpath>
				<value>
					<statBases>
						<IgnitionTemperature>180</IgnitionTemperature>
					</statBases>
					<stuffProps>
						<statOffsets>
							<IgnitionTemperature>180</IgnitionTemperature>
						</statOffsets>
					</stuffProps>
				</value>
			</li>
			
			<li Class="XmlExtensions.PatchOperationSafeAdd">
				<xpath>Defs/ThingDef[defName="BoiledLeather"]</xpath>
				<value>
					<statBases>
						<IgnitionTemperature>210</IgnitionTemperature>
					</statBases>
					<stuffProps>
						<statOffsets>
							<IgnitionTemperature>210</IgnitionTemperature>
						</statOffsets>
					</stuffProps>
				</value>
			</li>

			</operations>
		</match>
	</Operation>

</Patch>
